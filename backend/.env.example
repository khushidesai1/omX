# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./omx_dev.db

# Authentication Configuration
SECRET_KEY=changeme-super-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
# CORS_ORIGIN_REGEX=

# Email Configuration (optional)
# SENDGRID_API_KEY=your-sendgrid-api-key
ACCESS_REQUEST_EMAIL=admin@yourdomain.com
# ACCESS_REQUEST_SENDER=noreply@yourdomain.com

# Google Cloud Storage Configuration (Legacy)
# GCS_PROJECT_ID=your-default-gcs-project
# GCS_CREDENTIALS_PATH=/path/to/service-account-key.json
GCS_SIGNED_URL_TTL_SECONDS=900
GCS_UPLOAD_URL_TTL_SECONDS=900

# Google OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# omX Service Account Configuration
OMX_SERVICE_ACCOUNT_EMAIL=omx-service@your-project.iam.gserviceaccount.com
OMX_SERVICE_ACCOUNT_KEY_PATH=/path/to/omx-service-account-key.json